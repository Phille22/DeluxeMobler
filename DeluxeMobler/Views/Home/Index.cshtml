@* Hit kommaer man efter att man har loggat in. Här visas alla möbler, sorterat efter antal visningar. *@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Head">
    <div id="Inlogg">
        <p>Inloggad som: @Model.UserInfo.Name</p>
        <a href="~/Login/Login/">Byt användare</a>
    </div>
    @if (Model.UserInfo.CartList != null)
    {
        int nr = 0;
        int price = 0;
        foreach (var cartitem in Model.UserInfo.CartList)
        {
            price = price + cartitem.price;
            nr++;
        }
        <a href="~/Cart/ShowCart/">Visa varukorgen(@nr)</a>  @*Länken till varukorgen visar hur många produkter som finns i den*@
    }
    <h2>Deluxe Möbler!</h2>
    <ul>
        <li><a href="">Populära produkter</a></li>
        <li>
            <div class="Dropdown">
                <a href="">Kategorier</a>
                <div class="Dropdown-content">
                    <a href="~/Home/Table">Bord</a>
                    <a href="">Sängar</a>
                </div>
            </div>

        </li>
    </ul>
    <h3>Populära produkter</h3>
</div>
<div class="objekt">
    @* Här visas möblerna *@
    @foreach (var furniture in Model.FurnitureList)
    {
    <div class="objitem">
        <table>
            <tr>
                <td>
                    <a href="~/Home/Link/@furniture.id">
                        <div class="pic">
                            <img src="@furniture.PictureURL" width="200" height="200" />
                        </div>
                        <div class="obj">@furniture.Name</div>
                        <div class="beskr">Pris: @furniture.Price Kr</div>
                    </a>
                </td>
            </tr>
        </table>
    </div>
    }
</div>


